.wrapping_with_padding
  #doc_show
    %h1.title= @doc.title
    %p= simple_format(@doc.content)
    .buttons
      = link_to 'All Documents', docs_path, class: "button"
      = link_to 'Edit Document', edit_doc_path(@doc), class: "button"
      = link_to 'Trash', doc_path(@doc), method: :delete, data: {confirm: "Are you sure?" }, class: "button"